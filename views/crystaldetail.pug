extends layout

block content
  h1.text-center.mt-4.text-primary= title

  if !toShow
    .alert.alert-danger.text-center.mt-5
      h4 üö´ No Crystal instance found with this ID
      a.btn.btn-outline-secondary.mt-3(href='/crystals') ‚Üê Back to Crystal List
  else
    - const crystalId = toShow._id
    - const name = toShow.name
    - const hardness = toShow.hardness
    - const color = toShow.color

    .container.mt-5
      .card.shadow
        .card-header.bg-primary.text-white.text-center
          h4.mb-0 Crystal Details

        .card-body
          .row.mb-3
            .col-md-4.text-right.font-weight-bold Crystal ID:
            .col-md-8.d-flex.justify-content-between.align-items-center
              span= crystalId
              button.btn.btn-sm.btn-outline-light.ml-2(title='Copy ID', onclick=`navigator.clipboard.writeText("${crystalId}")`) üìã

          .row.mb-3
            .col-md-4.text-right.font-weight-bold Name:
            .col-md-8= name

          .row.mb-3
            .col-md-4.text-right.font-weight-bold Hardness:
            .col-md-8= hardness

          .row.mb-3
            .col-md-4.text-right.font-weight-bold Color:
            .col-md-8
              span.badge.badge-pill(style=`background-color: ${color}; color: white; padding: 6px 12px`) #{color}

        .card-footer.text-center
          a.btn.btn-secondary.mr-3(href='/crystals') ‚Üê Back
          a.btn.btn-warning(href=`/crystal/update?id=${crystalId}`) ‚úèÔ∏è Update Crystal

